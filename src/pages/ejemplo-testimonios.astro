---
// Ejemplo de uso del componente SectionTestimoniosMiradorDeLuzV2 con animaciones
import Layout from "../layouts/Layout.astro";
import SectionTestimoniosMiradorDeLuzV2 from "../components/react/SectionTestimoniosMiradorDeLuzV2";

// Datos de ejemplo personalizados
const testimoniosPersonalizados = [
  {
    id: '1',
    nombre: 'María González',
    fecha: '15/11/2025',
    comentario: 'Las cabañas son hermosas y muy cómodas. La vista a las montañas es espectacular. Volveremos sin duda!',
    rating: 5,
  },
  {
    id: '2',
    nombre: 'Carlos Rodríguez',
    fecha: '10/11/2025',
    comentario: 'Excelente lugar para desconectar. Todo muy limpio y el personal súper atento. Altamente recomendable.',
    rating: 5,
    avatarUrl: 'https://i.pravatar.cc/150?img=15',
  },
  {
    id: '3',
    nombre: 'Laura & Pedro',
    fecha: '5/11/2025',
    comentario: 'Pasamos nuestra luna de miel aquí y fue perfecto. Romántico, tranquilo y con todas las comodidades.',
    rating: 5,
  },
  {
    id: '4',
    nombre: 'Familia Martínez',
    fecha: '1/11/2025',
    comentario: 'Viajamos con nuestros 3 hijos y fue una experiencia maravillosa. Cabañas espaciosas y actividades para todos.',
    rating: 5,
    avatarUrl: 'https://i.pravatar.cc/150?img=28',
  },
];
---

<Layout
  title="Testimonios - Mirador de Luz"
  description="Lee las opiniones de nuestros huéspedes con animaciones espectaculares"
>
  <!-- Sección de relleno para poder hacer scroll -->
  <div class="min-h-screen bg-gradient-to-b from-blue-50 to-white flex items-center justify-center">
    <div class="text-center px-4">
      <h1 class="text-5xl md:text-7xl font-bold text-gray-900 mb-6">
        Testimonios con Animación
      </h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8">
        Hacé scroll para ver el efecto de expansión
      </p>
      <div class="animate-bounce">
        <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Componente con animación de expansión -->
  <!-- La sección empieza reducida y se expande al hacer scroll -->
  <SectionTestimoniosMiradorDeLuzV2 
    client:visible
    testimonios={testimoniosPersonalizados}
    textoBoton="Compartí tu experiencia"
  />

  <!-- Sección de relleno después -->
  <div class="min-h-screen bg-gradient-to-b from-stone-50 to-blue-50 flex items-center justify-center">
    <div class="text-center px-4">
      <h2 class="text-4xl md:text-6xl font-bold text-gray-900 mb-4">
        Fin de la Demostración
      </h2>
      <p class="text-lg md:text-xl text-gray-600">
        Volvé a hacer scroll hacia arriba para ver el efecto nuevamente
      </p>
    </div>
  </div>
</Layout>

<style>
  /* Ocultar scrollbar pero mantener funcionalidad */
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

