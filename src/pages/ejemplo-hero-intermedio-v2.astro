---
// Ejemplo de uso del componente HeroMiradorDeLuzLayout
// Este layout incluye: Navbar fijo + Hero con video + Vista previa de la siguiente sección
import Layout from "../layouts/Layout.astro";
import HeroMiradorDeLuzLayout from "../components/react/HeroMiradorDeLuzLayout";
import SectionUbicacionMiradorDeLuz from "../components/react/SectionUbicacionMiradorDeLuz";
import SectionCabanasMiradorDeLuzV3 from "../components/react/SectionCabanasMiradorDeLuzV3";
import FooterMiradorDeLuz from "../components/react/FooterMiradorDeLuz";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hero Layout - Mirador de Luz</title>
    <meta
      name="description"
      content="Layout completo con navbar fijo, hero con video y vista previa de la siguiente sección"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- 
      HeroMiradorDeLuzLayout incluye:
      - Navbar fijo (72-80px de alto)
      - Hero con video (80-85vh)
      - El resto del viewport muestra un preview de la siguiente sección
    -->
    <HeroMiradorDeLuzLayout
      client:load
      videoUrl="/videos/VideoCarlosPaz.mp4"
      subtitle="CERCA DE TODO"
      titleLine1="Urbano & Confortable."
      titleLine2="En el Corazón de la Ciudad."
    />

    <!-- 
      SECCIONES SIGUIENTES
      Estas secciones se verán debajo del hero
      Sin hacer scroll, se ve un poquito de la primera sección
    -->

    <!-- Sección de Ubicación -->
    <SectionUbicacionMiradorDeLuz client:visible />

    <!-- Sección de Cabañas -->
    <div class="bg-white">
      <SectionCabanasMiradorDeLuzV3 client:visible />
    </div>

    <!-- Footer -->
    <FooterMiradorDeLuz client:visible />

    <style is:global>
      /* Reset básico */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Montserrat", sans-serif;
        background-color: #f7f3ec;
      }

      /* Smooth scroll */
      html {
        scroll-behavior: smooth;
      }

      /* Asegurar que Montserrat se use globalmente */
      .font-montserrat {
        font-family: "Montserrat", sans-serif;
      }
    </style>
  </body>
</html>
